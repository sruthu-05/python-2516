 #check vote eligibility using ternary operator 
 #value_if_true if condition else value_if_false
age = int(input("Enter your age:"))
status = "eligible to vote" if age>=18 else "not eligible to vote"
print(status)

#elif ladder
avg_score =int(input("enter your average score:"))
if avg_score>=90:
  print("A grade")
elif avg_score>=75:
  print("B grade")
elif avg_score>=60:
  print("C grade")
elif avg_score>=50:
  print("D grade")
elif avg_score>=35:
  print("E grade")
else:
  print("FAIL")

 #match case
 #invaild syntax error
choice = int(input("enter your choice:"))
match choice:
      case 1:
             print("0ne")
      case 2:
           print("two")
      case 3:
            print("three")
      case 4:
            print("four")
      case 5:
             print("five")
      case _:
             print("Invalid")

